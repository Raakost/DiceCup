<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceCup.History">
  <ScrollView>
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical">
      <StackLayout x:Name="HistoryStack" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical">
        <Label Text="Timestamp:" FontSize="20" Margin="5,0,0,0"></Label>
      </StackLayout>
      <Button HorizontalOptions="Fill" x:Name="ClearButton" Text="Clear History" Clicked="ClearButton_OnClicked"></Button>
    </StackLayout>
  </ScrollView>
</ContentPage>